#!/bin/bash

set -o errexit # script exits when a command fails == set -e
set -o nounset # script exits when tries to use undeclared variables == set -u
set -o pipefail # causes pipelines to retain / set the last non-zero status

# Install yq, if not available
which yq || ( sudo add-apt-repository ppa:rmescandon/yq \
&& sudo apt update &&  \
sudo apt install yq -y)

# Install helm, if not available
which helm || ( curl https://baltocdn.com/helm/signing.asc | gpg --dearmor | sudo tee /usr/share/keyrings/helm.gpg > /dev/null \
 && sudo apt-get install apt-transport-https --yes && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/helm.gpg] https://baltocdn.com/helm/stable/debian/ all main" | sudo tee /etc/apt/sources.list.d/helm-stable-debian.list  \
    && sudo apt-get update && sudo apt-get install helm -y)

exit 0

